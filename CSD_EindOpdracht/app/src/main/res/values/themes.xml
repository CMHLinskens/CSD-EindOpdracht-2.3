<resources xmlns:tools="http://schemas.android.com/tools">
     Base application theme.
    <style name="Theme.CSD_base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CSD_yugioh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yugioh_reddish_brown_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yugioh_turquoise</item>
        <item name="colorSecondaryVariant">@color/yugioh_turquoise_2</item>
        <item name="colorOnSecondary">@color/yugioh_soft_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/yugioh_reddish_brown</item> // TODO: change or delete statusBarColor
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/yugioh_font</item>

<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

</resources>